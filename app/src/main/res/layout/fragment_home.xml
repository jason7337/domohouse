<?xml version="1.0" encoding="utf-8"?>
<!-- Layout mejorado para la página de inicio -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.pdm.domohouse.ui.home.HomeViewModel" />
    </data>

<!-- Contenido principal con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/default_padding"
                android:paddingEnd="@dimen/default_padding"
                android:paddingBottom="@dimen/default_padding">

                <!-- Saludo personalizado -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/welcomeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="@dimen/card_corner_radius_large"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/large_padding">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/greetingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buenos días,"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_large"
                                android:alpha="0.9" />

                            <TextView
                                android:id="@+id/userNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usuario"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_headline"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/dateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="17 de Junio, 2025"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_medium"
                                android:alpha="0.8"
                                android:layout_marginTop="8dp" />

                        </LinearLayout>

                        <!-- Icono del clima o estado -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="0dp"
                            android:alpha="0.2">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_home"
                                app:tint="@color/primary" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Controles superiores -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ProgressBar
                            android:id="@+id/loadingIndicator"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="start|center_vertical"
                            android:visibility="gone" />

                    </FrameLayout>

                    <Button
                        android:id="@+id/refreshButton"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Actualizar"
                        app:icon="@drawable/ic_refresh" />

                    <Button
                        android:id="@+id/menuButton"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Menú"
                        app:icon="@drawable/ic_menu" />

                </LinearLayout>

                <!-- Mapa visual de la casa con 3 habitaciones (3 Arduinos) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="@dimen/card_corner_radius_large"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/default_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vista de la Casa"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_medium" />

                        <!-- Representación visual simple de la casa -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/pin_background"
                            android:backgroundTint="@color/surface_variant"
                            android:padding="@dimen/spacing_medium">

                            <!-- Habitación 1 - Arduino 1 -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/room1Card"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginBottom="@dimen/spacing_small"
                                app:cardBackgroundColor="@color/room_living"
                                app:cardCornerRadius="@dimen/card_corner_radius"
                                app:cardElevation="2dp"
                                android:clickable="true"
                                android:focusable="true"
                                app:rippleColor="@color/ripple_primary">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/spacing_medium">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_bedroom"
                                        app:tint="@color/primary" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_marginStart="@dimen/spacing_medium">

                                        <TextView
                                            android:id="@+id/room1Name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Habitación 1 - Arduino 1"
                                            android:textColor="@color/text_primary"
                                            android:textSize="@dimen/text_size_medium"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/room1Status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Activo • 23°C • 3 dispositivos"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="@dimen/text_size_small" />

                                    </LinearLayout>

                                    <View
                                        android:id="@+id/room1StatusIndicator"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:background="@drawable/pin_background"
                                        android:backgroundTint="@color/success" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <!-- Habitación 2 - Arduino 2 -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/room2Card"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginBottom="@dimen/spacing_small"
                                app:cardBackgroundColor="@color/room_kitchen"
                                app:cardCornerRadius="@dimen/card_corner_radius"
                                app:cardElevation="2dp"
                                android:clickable="true"
                                android:focusable="true"
                                app:rippleColor="@color/ripple_primary">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/spacing_medium">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_lights"
                                        app:tint="@color/warning" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_marginStart="@dimen/spacing_medium">

                                        <TextView
                                            android:id="@+id/room2Name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Habitación 2 - Arduino 2"
                                            android:textColor="@color/text_primary"
                                            android:textSize="@dimen/text_size_medium"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/room2Status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Activo • 24°C • 4 dispositivos"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="@dimen/text_size_small" />

                                    </LinearLayout>

                                    <View
                                        android:id="@+id/room2StatusIndicator"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:background="@drawable/pin_background"
                                        android:backgroundTint="@color/success" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <!-- Habitación 3 - Arduino 3 -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/room3Card"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                app:cardBackgroundColor="@color/room_bathroom"
                                app:cardCornerRadius="@dimen/card_corner_radius"
                                app:cardElevation="2dp"
                                android:clickable="true"
                                android:focusable="true"
                                app:rippleColor="@color/ripple_primary">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="@dimen/spacing_medium">

                                    <ImageView
                                        android:layout_width="32dp"
                                        android:layout_height="32dp"
                                        android:src="@drawable/ic_security"
                                        app:tint="@color/secondary" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:layout_marginStart="@dimen/spacing_medium">

                                        <TextView
                                            android:id="@+id/room3Name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Habitación 3 - Arduino 3"
                                            android:textColor="@color/text_primary"
                                            android:textSize="@dimen/text_size_medium"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/room3Status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Activo • 22°C • 2 dispositivos"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="@dimen/text_size_small" />

                                    </LinearLayout>

                                    <View
                                        android:id="@+id/room3StatusIndicator"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:background="@drawable/pin_background"
                                        android:backgroundTint="@color/success" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <!-- Resumen de conectividad ESP32 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:background="@drawable/pin_background"
                            android:backgroundTint="@color/success_background"
                            android:padding="@dimen/spacing_small">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_volume_up"
                                app:tint="@color/success" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:text="ESP32 Conectado • 3/3 Arduinos Activos"
                                android:textColor="@color/success"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/pin_background"
                                android:backgroundTint="@color/success" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Detalles de habitación (inicialmente oculto) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/roomDetailsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/spacing_small">

                            <TextView
                                android:id="@+id/roomIcon"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:text="H"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                            <TextView
                                android:id="@+id/roomName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:text="Sala"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/roomStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activo"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small"
                                android:padding="6dp"
                                android:background="@drawable/pin_background"
                                android:backgroundTint="@color/success" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Temperatura:"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/roomTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23.5°C"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Humedad:"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/roomHumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45%"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dispositivos:"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/roomDevices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjetas de resumen rápido -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/statsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/default_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado General"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/activeRoomsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textColor="@color/text_primary"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Habitaciones\nActivas"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small"
                                    android:gravity="center"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/alertsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/text_primary"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alertas"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small"
                                    android:gravity="center"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:orientation="horizontal">

                    <!-- Dispositivos activos -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="2dp"
                        app:rippleColor="@color/ripple_primary"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_padding">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_devices"
                                app:tint="@color/primary"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/connectedDevicesValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textColor="@color/text_primary"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dispositivos\nActivos"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Temperatura promedio -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="2dp"
                        app:rippleColor="@color/ripple_primary"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_padding">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_temperature"
                                app:tint="@color/warning"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/avgTemperatureValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23.5°"
                                android:textColor="@color/text_primary"
                                android:textSize="28sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temperatura\nPromedio"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Sección de habitaciones -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habitaciones"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <!-- Grid de habitaciones -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/roomsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/item_room_card" />

                <!-- Accesos rápidos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accesos Rápidos"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <!-- Botones de acceso rápido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quickAllLightsOff"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Apagar todas\nlas luces"
                        android:textSize="@dimen/text_size_small"
                        app:icon="@drawable/ic_lights"
                        app:iconGravity="top"
                        app:iconSize="24dp"
                        app:strokeColor="@color/border"
                        app:rippleColor="@color/ripple_primary"
                        android:padding="@dimen/default_padding" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quickLockAll"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Bloquear\ntodo"
                        android:textSize="@dimen/text_size_small"
                        app:icon="@drawable/ic_lock"
                        app:iconGravity="top"
                        app:iconSize="24dp"
                        app:strokeColor="@color/border"
                        app:rippleColor="@color/ripple_primary"
                        android:padding="@dimen/default_padding" />

                </LinearLayout>

                <!-- Actividad reciente -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/spacing_medium">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Actividad Reciente"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver todo"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_size_medium"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="8dp"
                                android:clickable="true"
                                android:focusable="true" />

                        </LinearLayout>

                        <!-- Lista de actividades recientes -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recentActivityList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/item_activity"
                            tools:itemCount="3" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>