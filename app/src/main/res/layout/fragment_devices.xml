<?xml version="1.0" encoding="utf-8"?>
<!-- Layout rediseñado para la página de dispositivos - Sistema de habitaciones con 3 Arduinos -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".ui.devices.DevicesFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/default_padding"
                android:paddingEnd="@dimen/default_padding"
                android:paddingBottom="@dimen/default_padding">

                <!-- Header: Estado ESP32 y Estadísticas -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/primary"
                    app:cardCornerRadius="@dimen/card_corner_radius_large"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/large_padding">

                        <!-- Estado ESP32 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/spacing_large">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_shield"
                                app:tint="@color/white" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sistema ESP32"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_large"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/esp32StatusText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Conectado - 3/3 Arduinos Activos"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_medium"
                                    android:alpha="0.9" />

                            </LinearLayout>

                            <!-- Indicador de estado -->
                            <View
                                android:id="@+id/esp32StatusIndicator"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/pin_background"
                                android:backgroundTint="@color/success" />

                        </LinearLayout>

                        <!-- Estadísticas de dispositivos -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/pin_background"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/default_padding">

                            <!-- Total -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/totalDevicesCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24"
                                    android:textColor="@color/primary"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small" />

                            </LinearLayout>

                            <!-- Activos -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/activeDevicesCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="18"
                                    android:textColor="@color/success"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Activos"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small" />

                            </LinearLayout>

                            <!-- Sin conexión -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/offlineDevicesCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textColor="@color/error"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sin conexión"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Acciones rápidas -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/default_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acciones Rápidas"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/spacing_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Control general -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/generalControlButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/spacing_small"
                                android:text="Control General"
                                app:icon="@drawable/ic_straighten"/>

                            <!-- Programación -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/scheduleButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:text="Programar"
                                app:icon="@drawable/ic_schedule"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Sistema de Habitaciones (3 Arduinos) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habitaciones DomoHouse"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Control inteligente de 3 habitaciones con Arduino"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginBottom="@dimen/spacing_large" />

                <!-- Habitación 1 - Arduino 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/room1Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/room_living"
                    app:cardCornerRadius="@dimen/card_corner_radius_large"
                    app:cardElevation="@dimen/card_elevation"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ripple_primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/large_padding"
                        android:gravity="center_vertical">

                        <!-- Icono y estado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardBackgroundColor="@color/primary"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_bedroom"
                                    app:tint="@color/white" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arduino 1"
                                android:textColor="@color/text_secondary"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Información de la habitación -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/spacing_large">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Habitación 1"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_large"
                                    android:textStyle="bold" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/success"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:id="@+id/room1Status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="8dp"
                                        android:paddingVertical="4dp"
                                        android:text="Activo"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                            <!-- Información de dispositivos -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/spacing_medium">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room1Temperature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="23°C"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Temperatura"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room1DevicesCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="8"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dispositivos"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room1ActiveCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="6"
                                        android:textColor="@color/success"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Activos"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Flecha de navegación -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary"
                            android:layout_marginStart="@dimen/spacing_medium" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Habitación 2 - Arduino 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/room2Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/room_kitchen"
                    app:cardCornerRadius="@dimen/card_corner_radius_large"
                    app:cardElevation="@dimen/card_elevation"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ripple_primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/large_padding"
                        android:gravity="center_vertical">

                        <!-- Icono y estado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardBackgroundColor="@color/warning"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_lights"
                                    app:tint="@color/white" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arduino 2"
                                android:textColor="@color/text_secondary"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Información de la habitación -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/spacing_large">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Habitación 2"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_large"
                                    android:textStyle="bold" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/success"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:id="@+id/room2Status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="8dp"
                                        android:paddingVertical="4dp"
                                        android:text="Activo"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                            <!-- Información de dispositivos -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/spacing_medium">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room2Temperature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="24°C"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Temperatura"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room2DevicesCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="12"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Dispositivos"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room2ActiveCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="9"
                                        android:textColor="@color/success"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Activos"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Flecha de navegación -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary"
                            android:layout_marginStart="@dimen/spacing_medium" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Habitación 3 - Arduino 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/room3Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardBackgroundColor="@color/room_bathroom"
                    app:cardCornerRadius="@dimen/card_corner_radius_large"
                    app:cardElevation="@dimen/card_elevation"
                    android:clickable="true"
                    android:focusable="true"
                    app:rippleColor="@color/ripple_primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/large_padding"
                        android:gravity="center_vertical">

                        <!-- Icono y estado -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                app:cardBackgroundColor="@color/secondary"
                                app:cardCornerRadius="28dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_security"
                                    app:tint="@color/white" />

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arduino 3"
                                android:textColor="@color/text_secondary"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Información de la habitación -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/spacing_large">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Habitación 3"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_large"
                                    android:textStyle="bold" />

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/success"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:id="@+id/room3Status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="8dp"
                                        android:paddingVertical="4dp"
                                        android:text="Activo"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                            <!-- Información de dispositivos -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/spacing_medium">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room3Temperature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="22°C"
                                        android:textColor="@color/text_primary"
                                        android:textSize="@dimen/text_size_medium"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Temperatura"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="10sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/room3DevicesCount"
